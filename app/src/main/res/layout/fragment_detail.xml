<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_stnd"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_stnd"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/detail_item_day_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Today"
                    />
                <TextView
                    android:id="@+id/detail_item_date_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="January 7"
                    />
                <TextView
                    android:id="@+id/detail_item_high_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_large"
                    tools:text="14°"
                    />
                <TextView
                    android:id="@+id/detail_item_low_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_large"
                    tools:text="5°"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_stnd"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/detail_item_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="center"
                    />
                <TextView
                    android:id="@+id/detail_item_forecast_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/font_size_medium"
                    tools:text="Sunny"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_stnd"
            android:layout_margin="@dimen/margin_stnd"
            >
            <TextView
                android:id="@+id/detail_item_humidity_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Humidity: 42%"
                />
            <TextView
                android:id="@+id/detail_item_wind_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Wind: 31km/h SE"
                />
            <TextView
                android:id="@+id/detail_item_pressure_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pressure: 1031 kPa"
                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>
